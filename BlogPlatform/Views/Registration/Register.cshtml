@using BlogPlatform.Models
@model BlogPlatform.Models.RegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
</head>
<body>
    <div style="width: 300px; margin: 100px auto;">
        <h2>Register</h2>
        <form asp-action="Register" method="post">
            <div>
                <label asp-for="Email">Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" style="color: red;"></span>
            </div>
            <div>
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" style="color: red;"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword" style="color: red;"></span>
            </div>
            <button type="submit">Register</button>
        </form>
        <p>Already have an account? <a href="@Url.Action("login", "Registration")">Login here</a></p>
    </div>
</body>
</html>
